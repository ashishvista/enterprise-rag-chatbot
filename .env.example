# Confluence API credentials
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net
CONFLUENCE_USERNAME=your-email@company.com
CONFLUENCE_API_TOKEN=your-confluence-api-token
CONFLUENCE_SPACE_WHITELIST=ENG,OPS

# Embedding + model runtime
OLLAMA_BASE_URL=http://localhost:11434
EMBEDDING_MODEL_NAME=bge-m3
REQUEST_TIMEOUT=30
CHUNK_SIZE=1024
CHUNK_OVERLAP=100

# Chat LLM configuration
LLM_MODEL_NAME=gpt_oss
LLM_TEMPERATURE=0.1
# LLM_MAX_OUTPUT_TOKENS=1024
# LLM_CONTEXT_WINDOW=4096
CHAT_SYSTEM_PROMPT=You are an enterprise-ready assistant that cites provided context.
CONVERSATION_HISTORY_TABLE=chatbot_conversation_history
CONVERSATION_HISTORY_MAX_MESSAGES=20
RAG_CONTEXT_MAX_CHARS_PER_SOURCE=1200

# Langfuse observability (optional)
# LANGFUSE_PUBLIC_KEY=pk-...
# LANGFUSE_SECRET_KEY=sk-...
# LANGFUSE_HOST=http://localhost:3100
# LANGFUSE_ENVIRONMENT=production
# LANGFUSE_JWT_SECRET=changeme-jwt-secret
# (Langfuse reuses POSTGRES_* credentials when using docker-compose defaults.)
# CLICKHOUSE_URL=clickhouse://default:@localhost:9000/langfuse
# CLICKHOUSE_HTTP_URL=http://default:@localhost:8123/langfuse

# Postgres / pgvector connection strings (define at least one)
DATABASE_URL_ASYNC=postgresql+asyncpg://rag_user:rag_password@localhost:5432/rag
# DATABASE_URL=postgresql+psycopg://rag_user:rag_password@localhost:5432/rag
DATABASE_SCHEMA=public
VECTOR_COLLECTION=confluence_pages

# Docker Compose overrides (used by docker-compose.yaml)
POSTGRES_DB=rag
POSTGRES_USER=rag_user
POSTGRES_PASSWORD=rag_password
POSTGRES_PORT=5432
