# Confluence API credentials
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net
CONFLUENCE_USERNAME=your-email@company.com
CONFLUENCE_API_TOKEN=your-confluence-api-token
CONFLUENCE_SPACE_WHITELIST=ENG,OPS

# Embedding + model runtime
OLLAMA_BASE_URL=http://localhost:11434
EMBEDDING_MODEL_NAME=bge-m3
REQUEST_TIMEOUT=30
CHUNK_SIZE=1024
CHUNK_OVERLAP=100

# Postgres / pgvector connection strings (define at least one)
DATABASE_URL_ASYNC=postgresql+asyncpg://rag_user:rag_password@localhost:5432/rag
# DATABASE_URL=postgresql+psycopg://rag_user:rag_password@localhost:5432/rag
DATABASE_SCHEMA=public
VECTOR_COLLECTION=confluence_pages

# Docker Compose overrides (used by docker-compose.yaml)
POSTGRES_DB=rag
POSTGRES_USER=rag_user
POSTGRES_PASSWORD=rag_password
POSTGRES_PORT=5432
